// This is your Prisma schema file
// Learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model YoutubeModel {
  id          String   @id @default(uuid())
  youtube_url String
}

model Image {
  id            String      @id @default(uuid())
  url           String
  alt           String
  caseStudy     CaseStudy?  @relation(fields: [caseStudyId], references: [id])
  caseStudyId   String?
}

model CaseStudy {
  id              String    @id @default(uuid())
  slug            String    @unique
  title           String
  subtitle        String
  description     String
  tags            String[]
  images          Image[]
  ctaUrl          String
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  color           String
  orderIndex      Int       @default(0)
  backgroundColor String
  theme           String
  locale          String    @default("en")
}

model Banner {
  id            String    @id @default(uuid())
  title         String
  content       String
  subtitle      String?
  imageUrl      String?
  youtubeUrl    String?
  startDate     DateTime?
  endDate       DateTime?
  isActive      Boolean   @default(false)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  ctaButtonText String?
  ctaButtonLink String?
  locale        String    @default("en")
}

model BlogPost {
  id          String   @id @default(uuid())
  slug        String   @unique
  title       String
  imageurl    String
  createdAt   DateTime @default(now())
  imageAlt    String?
  excerpt     String
  contentHtml String   @db.Text
  isPinned    Boolean  @default(false)
  locale      String   @default("en")
}

model Testimonial {
  id        String   @id @default(uuid())
  author    String
  role      String
  company   String
  quote     String   @db.Text
  image     String
  image_alt String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  locale    String   @default("en")
}

model CaseStudyImage {
  id              String          @id @default(uuid())
  image           String
  alt             String
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  caseStudySlider CaseStudySlider? @relation(fields: [sliderId], references: [id])
  sliderId        String?
}

model CaseStudySlider {
  id        String           @id @default(uuid())
  images    CaseStudyImage[]
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt
}